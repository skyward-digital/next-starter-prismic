{
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "single": "heading1",
          "label": "Title",
          "placeholder": "Page Title"
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "Slug",
          "placeholder": "Type a url formatted page slug..."
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "single": "paragraph,strong,em,hyperlink",
          "allowTargetBlank": true,
          "label": "Description"
        }
      },
      "body": {
        "type": "Slices",
        "fieldset": "Slice zone",
        "config": {
          "labels": {},
          "choices": {
            "text": {
              "type": "Slice",
              "fieldset": "Text",
              "description": "Rich Text section with option for 1 or 2 columns",
              "icon": "text_fields",
              "display": "list",
              "non-repeat": {
                "content": {
                  "type": "StructuredText",
                  "config": {
                    "multi": "paragraph,heading1,heading2,heading3,strong,em,hyperlink",
                    "allowTargetBlank": true,
                    "label": "content"
                  }
                }
              },
              "repeat": {}
            },
            "quote": {
              "type": "Slice",
              "fieldset": "Quote",
              "description": "A stylized quote",
              "icon": "format_quote",
              "display": "list",
              "non-repeat": {
                "quote": {
                  "type": "StructuredText",
                  "config": {
                    "single": "paragraph",
                    "allowTargetBlank": true,
                    "label": "quote"
                  }
                }
              },
              "repeat": {}
            },
            "full_width_image": {
              "type": "Slice",
              "fieldset": "Full Width Image",
              "description": "A wide image",
              "icon": "broken_image",
              "display": "list",
              "non-repeat": {
                "full_width_image": {
                  "type": "Image",
                  "config": {
                    "constraint": {
                      "width": null,
                      "height": null
                    },
                    "thumbnails": [],
                    "label": "full_width_image"
                  }
                }
              },
              "repeat": {}
            },
            "newsletter": {
              "type": "Slice",
              "fieldset": "Newsletter",
              "description": "A newsletter form",
              "icon": "playlist_add_check",
              "display": "list",
              "non-repeat": {
                "title": {
                  "type": "StructuredText",
                  "config": {
                    "single": "heading1,heading2,heading3,heading4,heading5,heading6",
                    "label": "Title"
                  }
                },
                "paragraph": {
                  "type": "StructuredText",
                  "config": {
                    "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,o-list-item",
                    "label": "Paragraph"
                  }
                },
                "submit_label": {
                  "type": "StructuredText",
                  "config": {
                    "single": "paragraph",
                    "label": "Button Label",
                    "placeholder": "Text for form submit button"
                  }
                }
              },
              "repeat": {}
            }
          }
        }
      }
    },
    "Details": {
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date"
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "select": "document",
          "customtypes": [
            "author"
          ],
          "label": "Author",
          "placeholder": "Who wrote this"
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "select": "document",
          "customtypes": [
            "blog_category"
          ],
          "label": "Category",
          "placeholder": "Which category is most relevant?"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Featured Image"
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Meta title..."
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Meta Description..."
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "SEO Image"
        }
      }
    }
  },
  "status": true
}